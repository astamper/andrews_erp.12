<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stock %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:initial_quantity) %></dt>
      <dd><pre class="prettyprint"><%= @stock.initial_quantity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_quantity) %></dt>
      <dd><pre class="prettyprint"><%= @stock.current_quantity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:unit) %></dt>
      <dd><pre class="prettyprint"><%= @stock.unit %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:purchase_date) %></dt>
      <dd><pre class="prettyprint"><%= @stock.purchase_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:expiration_date) %></dt>
      <dd><pre class="prettyprint"><%= @stock.expiration_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:purchase_price) %></dt>
      <dd><pre class="prettyprint"><%= @stock.purchase_price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:supplier) %></dt>
      <dd><pre class="prettyprint"><%= @stock.supplier %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:batch_number) %></dt>
      <dd><pre class="prettyprint"><%= @stock.batch_number %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stocks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_path(@stock), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_path(@stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

