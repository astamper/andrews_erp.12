<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stock %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:initial_quantity) %></th>
      <th><%= model_class.human_attribute_name(:current_quantity) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:purchase_date) %></th>
      <th><%= model_class.human_attribute_name(:expiration_date) %></th>
      <th><%= model_class.human_attribute_name(:purchase_price) %></th>
      <th><%= model_class.human_attribute_name(:supplier) %></th>
      <th><%= model_class.human_attribute_name(:batch_number) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.id %></td>
        <td><%= stock.initial_quantity %></td>
        <td><%= stock.current_quantity %></td>
        <td><%= stock.unit %></td>
        <td><%= stock.purchase_date %></td>
        <td><%= stock.expiration_date %></td>
        <td><%= stock.purchase_price %></td>
        <td><%= stock.supplier %></td>
        <td><%= stock.batch_number %></td>
        <td><%=l stock.created_at, format: :long %></td>
        <td>
          <%= link_to stock_path(stock), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to stock_path(stock), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stock_path,
            :class => 'btn btn-primary' %>
